<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <div class="alert alert-warning">
                        <p>Você precisa estar logado para acessar esta página.</p>
                        <a href="/login" class="btn btn-primary">Fazer Login</a>
                    </div>
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1"/>
        </Found>
        <NotFound>
            <PageTitle>Página não encontrada</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <div class="alert alert-danger">
                    <h3>Oops! Página não encontrada.</h3>
                    <p>Desculpe, não encontramos nada neste endereço.</p>
                    <a href="/" class="btn btn-primary">Voltar para Home</a>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>